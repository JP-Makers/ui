import { Button, VerticalBox } from "std-widgets.slint";

export component MainWindow inherits Window {
    callback open_file1();
    callback open_file2();

    in-out property <string> file1_path: "No file selected";
    in-out property <string> file2_path: "No file selected";

    VerticalBox {
        spacing: 20px;
        padding: 20px;

        Button {
            text: "Open File 1";
            clicked => {
                root.open_file1();
            }
        }

        Text {
            text: "File 1: " + root.file1_path;
            wrap: word-wrap;
        }

        Button {
            text: "Open File 2";
            clicked => {
                root.open_file2();
            }
        }

        Text {
            text: "File 2: " + root.file2_path;
            wrap: word-wrap;
        }
    }
}
