
import { Button, VerticalBox, HorizontalBox, ScrollView, StandardListView, ListView } from "std-widgets.slint";

export struct ComparisonResultItem {
    type: string,
    message: string,
    signal: string,
    field: string,
    dbc1: string,
    dbc2: string,
}

export component MainWindow inherits Window {
    title: "TwinCAN";
    preferred-width: 800px;
    preferred-height: 700px;

    callback select-dbc1-file();
    callback select-dbc2-file();
    callback compare-files();
    callback export-csv();

    in-out property <string> dbc1-path: "";
    in-out property <string> dbc2-path: "";
    in-out property <string> status: "Ready to compare DBC files";
    in-out property <[ComparisonResultItem]> comparison-results: [];

    VerticalBox {
        padding: 20px;
        spacing: 15px;

        // Header
        Text {
            text: "TwinCAN";
            font-size: 24px;
            font-weight: 700;
            horizontal-alignment: center;
        }

        // File selection section
        VerticalBox {
            spacing: 10px;

            Text {
                text: "Select DBC Files";
                font-size: 16px;
                font-weight: 600;
            }

            HorizontalBox {
                spacing: 10px;
                alignment: stretch;

                VerticalBox {
                    spacing: 5px;
                    Text {
                        text: "DBC File 1:";
                        font-size: 12px;
                    }
                    HorizontalBox {
                        spacing: 10px;
                        Rectangle {
                            background: white;
                            border-width: 1px;
                            border-color: #ccc;
                            border-radius: 4px;
                            height: 30px;
                            min-width: 200px;

                            Text {
                                text: dbc1-path == "" ? "No file selected" : dbc1-path;
                                color: dbc1-path == "" ? #999 : #333;
                                vertical-alignment: center;
                                horizontal-alignment: left;
                                x: 10px;
                            }
                        }
                        Button {
                            text: "Browse...";
                            clicked => { select-dbc1-file(); }
                        }
                    }
                }

                VerticalBox {
                    spacing: 5px;
                    Text {
                        text: "DBC File 2:";
                        font-size: 12px;
                    }
                    HorizontalBox {
                        spacing: 10px;
                        Rectangle {
                            background: white;
                            border-width: 1px;
                            border-color: #ccc;
                            border-radius: 4px;
                            height: 30px;
                            min-width: 200px;

                            Text {
                                text: dbc2-path == "" ? "No file selected" : dbc2-path;
                                color: dbc2-path == "" ? #999 : #333;
                                vertical-alignment: center;
                                horizontal-alignment: left;
                                x: 10px;
                            }
                        }
                        Button {
                            text: "Browse...";
                            clicked => { select-dbc2-file(); }
                        }
                    }
                }
            }
        }

        // Action buttons
        HorizontalBox {
            spacing: 10px;
            alignment: center;

            Button {
                text: "Compare Files";
                enabled: dbc1-path != "" && dbc2-path != "";
                clicked => { compare-files(); }
            }

            Button {
                text: "Export to CSV";
                enabled: comparison-results.length > 0;
                clicked => { export-csv(); }
            }
        }

        // Status
        Text {
            text: status;
            font-size: 12px;
            color: #666;
            horizontal-alignment: center;
        }

        // Results section
        VerticalBox {
            spacing: 10px;

            Text {
                text: "Comparison Results";
                font-size: 16px;
                font-weight: 600;
            }

            // Column headers
            Rectangle {
                height: 30px;
                background: #e8e8e8;
                border-width: 1px;
                border-color: #ccc;

                HorizontalBox {
                    padding: 5px;
                    spacing: 10px;

                    Text {
                        text: "Type";
                        width: 80px;
                        font-weight: 600;
                        vertical-alignment: center;
                    }

                    Text {
                        text: "Message";
                        width: 200px;
                        font-weight: 600;
                        vertical-alignment: center;
                    }

                    Text {
                        text: "Signal";
                        width: 250px;
                        font-weight: 600;
                        vertical-alignment: center;
                    }

                    Text {
                        text: "Field";
                        width: 150px;
                        font-weight: 600;
                        vertical-alignment: center;
                    }

                    Text {
                        text: "DBC1";
                        width: 150px;
                        font-weight: 600;
                        vertical-alignment: center;
                    }

                    Text {
                        text: "DBC2";
                        width: 150px;
                        font-weight: 600;
                        vertical-alignment: center;
                    }
                }
            }

            ScrollView {
                height: 200px;

                ListView {
                    for item in comparison-results: Rectangle {
                        height: 40px;
                        background: item.type == "Message" ? #f0f8ff : #fff8f0;
                        border-width: 1px;
                        border-color: #ddd;

                        HorizontalBox {
                            padding: 5px;
                            spacing: 10px;

                            Text {
                                text: item.type;
                                width: 80px;
                                font-weight: 800;
                                font-size: 15px;
                                color: item.type == "Message" ? #0066cc : #cc6600;
                                vertical-alignment: center;
                            }

                            Text {
                                text: item.message;
                                width: 200px;
                                font-size: 15px;
                                vertical-alignment: center;
                            }

                            Text {
                                text: item.signal;
                                width: 250px;
                                font-size: 15px;
                                vertical-alignment: center;
                            }

                            Text {
                                text: item.field;
                                width: 150px;
                                font-size: 15px;
                                vertical-alignment: center;
                            }

                            Text {
                                text: item.dbc1;
                                width: 150px;
                                font-size: 15px;
                                color: #006600;
                                vertical-alignment: center;
                            }

                            Text {
                                text: item.dbc2;
                                width: 150px;
                                font-size: 15px;
                                color: #990000;
                                vertical-alignment: center;
                            }
                        }
                    }
                }
            }
        }
    }
}
